{% extends 'base.html.twig' %}

{% block titre %}
    {{ parent() }} - Tarification
{% endblock %}

{% block body %}
    <div class="row">
        {% for o in organismes %}
            <div class="col-xl-3 col-md-6">
                <div onclick="location='{{ path('admin_organismes_show_services', {id: o.id}) }}'" class="card mini-stat text-center text-pusso-primary text-uppercase pusso-dashboard-card shadow">
                    <div class="p-3 mini-stat-desc">
                        <div class="clearfix">
                            <h6 class="mt-3">{{ o.nom }}</h6>
                            <h1 class="mt-3">{{ o.services | length }}</h1>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}